<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.JournalDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_16"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_view_small_size"
            android:textStyle="italic"
            android:padding="@dimen/padding_8dp"
            android:textColor="@color/black"
            android:text="@string/entry_heading"
            tools:text="Entry Heading"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/text_entry_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding_16"
                android:textSize="@dimen/text_view_medium_size"
                android:fontFamily="@font/roboto_medium_italic"
                tools:text="KNEAD WITH LOVE" />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_view_small_size"
            android:textStyle="italic"
            android:paddingBottom="@dimen/padding_8dp"
            android:layout_marginTop="@dimen/padding_16"
            android:textColor="@color/black"
            android:text="@string/entry_description"
            tools:text="Entry Heading"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/text_entry_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding_16"
                android:textSize="@dimen/text_view_regular_size"
                android:fontFamily="@font/roboto_medium_italic"
                tools:text="Today i went to market and bought baking ingredients for baking a cake,
I came back " />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/padding_16"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/text_entry_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_16"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_view_regular_size"
                android:fontFamily="@font/roboto_medium_italic"
                tools:text="Entry Made On 25/06/2018 at 12:45 AM" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>