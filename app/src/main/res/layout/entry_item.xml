<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginLeft="@dimen/padding_8dp"
    android:layout_marginRight="@dimen/padding_8dp"
    android:layout_marginTop="@dimen/padding_8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_8dp"
        android:paddingStart="@dimen/padding_8dp"
        android:paddingTop="@dimen/padding_16">

        <TextView
            android:id="@+id/text_item_entry_header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:fontFamily="@font/roboto_bold_italic"
            android:textSize="@dimen/text_view_regular_size"
            tools:text="My Experience in ALC ENUGU Yesterday" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/padding_8dp"
                android:textSize="@dimen/text_view_small_size"
                android:textStyle="italic"
                android:text="@string/entered_on"/>

            <TextView
                android:id="@+id/text_item_entry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/padding_8dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_view_small_size"
                tools:text="12/02/2018" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="@dimen/text_view_small_size"
                android:paddingEnd="@dimen/padding_8dp"
                android:text="@string/at"/>

            <TextView
                android:id="@+id/text_item_entry_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_view_small_size"
                tools:text="24:02 AM" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
